#!/usr/bin/env bash

set_marked_theme() {
	local dir=$1
	local theme=$2
	local
	dest="$HOME/Library/Containers/com.brettterpstra.marked2/Data/Library/Application Support/Marked 2/Custom CSS"

	if [[ ! -d "$dest" ]]; then
		mkdir -p "$dest"
	fi

	rm -rf "$dest/base16-*.css"
	ln -s "${dir}/marked/base16-${theme}.css" "$dest/base16-${theme}.css"
}

set_marked_theme "$@"
